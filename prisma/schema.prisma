datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum IssueSeverity {
  minor
  major
  critical
}

enum IssueStatus {
  open
  in_progress
  resolved
}

model Issue {
  id          String        @id @default(cuid())
  title       String
  description String
  site        String?
  severity    IssueSeverity
  status      IssueStatus
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}
